{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "baseUrl": "./src",
        "paths": {
            "@app": ["./app"],
            "@app/*": ["./app/*"],

            "@pages": ["./pages"],
            "@pages/*": ["./pages/*"],

            "@widgets": ["./widgets"],
            "@widgets/*": ["./widgets/*"],

            "@features": ["./features"],
            "@features/*": ["./features/*"],

            "@entities": ["./entities"],
            "@entities/*": ["./entities/*"],

            "@shared": ["./shared"],
            "@shared/*": ["./shared/*"]
        }
    },
    "include": ["src"],
    "references": [{ "path": "./tsconfig.node.json" }]
}
